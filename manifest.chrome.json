{
	"manifest_version": 2,
	"name": "Switch for PiHole",
	"version": "2.2.1",
	"author": "Pascal Glaser",
	"description": "Browser extension to control your PiHole",
	"icons": {
		"48": "icon/icon-48.png",
		"96": "icon/icon-96.png",
		"128": "icon/icon-128.png"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icon/icon-16.png",
			"32": "icon/icon-32.png"
		},
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html"
	},
	"background": {
		"persistent": true,
		"page": "background.html"
	},
	"permissions": [
		"storage",
		"<all_urls>",
		"webRequest",
		"webRequestBlocking"
	]
}
