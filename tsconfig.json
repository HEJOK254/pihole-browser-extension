{
	"compilerOptions": {
		"target": "ESNext",
		"sourceMap": true,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"es2015.promise"
		],
		"rootDir": "src/",
		"outDir": "dist",
		"types": [
			"chrome",
			"firefox-webext-browser",
			"bootstrap"
		],
		"baseUrl": ".",
		"paths": {
			"webpack": [
				"./node_modules/@types/webpack/index.d.ts"
			]
		},
		"module": "CommonJS",
		"experimentalDecorators": true,
		"strict": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules"
	]
}
