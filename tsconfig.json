{
	"compilerOptions": {
		"target": "ES2015",
		"sourceMap": false,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"es2015.promise"
		],
		"rootDir": "src/",
		"outDir": "dist",
		"types": [
			//(various types, e.g. jquery, core-js),
			"chrome",
			"firefox-webext-browser",
			"jquery",
			"bootstrap"
		],
		"moduleResolution": "node",
		"module": "CommonJS",
		"experimentalDecorators": true,
		"strict": true
	},
	"exclude": [
		"node_modules"
	]
}
